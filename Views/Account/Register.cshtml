@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center col-md-4 offset-md-4">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <p>
            <label asp-for="Login"></label><br />
            <input type="text" asp-for="Login" /><br />
            <span asp-validation-for="Login" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="Password"></label><br />
            <input type="password" asp-for="Password" /><br />
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="ConfirmPassword"></label><br />
            <input type="password" asp-for="ConfirmPassword" /><br />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </p>
        <p>
            <input type="submit" class="btn btn-primary col-md-6" value="Register" />
        </p>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />