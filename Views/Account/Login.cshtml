@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    form{
        margin: 2vh;
    }
    /*form input[type="submit"]{
        width: 168px;
    }*/

    #validationSummary ul li {
        list-style-type: none;
    }
    #validationSummary ul{
        padding: 0px;
    }
</style>

<div class="text-center col-md-4 offset-md-4">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" id="validationSummary"></div>
        <p>
            <label asp-for="Login"></label><br />
            <input type="text" asp-for="Login" /><br />
            <span asp-validation-for="Login" class="text-danger"></span>
        </p>
        <p>
            <label asp-for="Password"></label><br />
            <input type="password" asp-for="Password" /><br />
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>
        <p>
            <input type="submit" class="btn btn-primary col-md-6" value="Sign in" />
        </p>
    </form>

    <form asp-area="" asp-controller="Account" asp-action="Register" method="get">
        <input type="submit" value="Register" class="btn btn-secondary col-md-6" />
    </form>
</div>

<partial name="_ValidationScriptsPartial" />