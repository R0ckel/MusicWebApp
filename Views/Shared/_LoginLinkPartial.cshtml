@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="text-primary fw-bold nav-link user-select-none">
            Logged in as @User.Identity.Name
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Logout">
            Logout
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Account" asp-action="Login">
            Login
        </a>
    </li>
}
